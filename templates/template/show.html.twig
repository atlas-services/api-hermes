{% extends 'base.html.twig' %}

{% block title %}Template{% endblock %}

{% block body %}
    <h1>Template</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ template.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ template.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ template.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-10 mx-auto mt-5">
    {{ template.content|raw }}
    </div>

    <a href="{{ path('app_template_index') }}">back to list</a>

    <a href="{{ path('app_template_edit', {'id': template.id}) }}">edit</a>

    {{ include('template/_delete_form.html.twig') }}
{% endblock %}
