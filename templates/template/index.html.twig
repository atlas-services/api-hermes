{% extends 'base.html.twig' %}

{% block title %}Template index{% endblock %}

{% block body %}
    <div class="col-12 col-sm-10 mx-auto my-5">
        <h1>Template index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for template in templates %}
                <tr>
                    <td>{{ template.id }}</td>
                    <td>{{ template.type }}</td>
                    <td>{{ template.name }}</td>
                    <td>{{ template.content }}</td>
                    <td>
                        <a href="{{ path('app_template_show', {'id': template.id}) }}">show</a>
                        <a href="{{ path('app_template_edit', {'id': template.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_template_new') }}">Create new</a>
    </div>
{% endblock %}
